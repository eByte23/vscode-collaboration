    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.64",
    "@types/mocha": "^2.2.32",
    "@types/ws": "0.0.38"
  },
  "dependencies": {
    "component-diff": "*",
    "component-patch": "*",
    "ws": "^2.2.0"
  }
}
