{
  "name": "vscode-collaboration",
  "displayName": "vscode-collaboration",
  "description": "Real time team collaboration",
  "version": "0.0.1",
  "publisher": "ebyte23",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "collaboration.start",
        "title": "Start Collaborating!"
      }
